@model List<ShoppingLP3.ViewModels.LojaViewModel>
@{
    ViewData["Title"] = "Lojas";
}

@if(Model.Count == 0)
{
    <p>Nenhuma loja cadastrada.</p>
}
else 
{
    <h1>Lojas</h1>
    <p>@Model.Count lojas cadastradas</p>

    @foreach(var loja in Model)
    {
        <h3>
            @loja.Nome
        </h3>
        <p>@loja.Descricao</p>
        <p><strong>Contato: </strong>@loja.Email</p>
        <p><strong>Piso: </strong>@loja.Piso</p>
        
        <hr> 
    }
}